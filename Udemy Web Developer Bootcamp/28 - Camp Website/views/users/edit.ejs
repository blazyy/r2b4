<%- include("../partials/header") %>

<div class="container">
    <h1 class="display-4 m-5 text-center">Edit</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4">
                <form action="/users/<%= user.username%>?_method=put" method="post">
                    <div class="form-group">
                        <input type="text" name="user[username]" value="<%= user.username%>" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <input type="email" name="user[email]" value="<%= user.email%>" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="user[display_picture]" placeholder="Profile Picture" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="about">About</label>
                        <textarea name="user[about]" class="form-control" id="about" rows="3"><%= user.about %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>
                <a class="btn btn-secondary btn-block mt-3" href="/users/<%= user.username%>">Go Back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>
