<%- include("../partials/header") %>

<script src="https://kit.fontawesome.com/90c1f722b6.js" crossorigin="anonymous"></script>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <img class="card-img-top" src="https://t3.ftcdn.net/jpg/00/64/67/80/240_F_64678017_zUpiZFjj04cnLri7oADnyMH0XBYyQghG.jpg">
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <h5 class="card-title mt-3"><%= user.username %></h5>
                    </div>
                    <p class="card-text"></p>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">About</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Last edited date</h6>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
            <% if(campgrounds.length) { %>
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Added Campgrounds</h5>
                        <div class="row">
                            <% campgrounds.forEach(function(campground){ %>
                            <div class="col-md-3 col-sm-6">
                                <div class="card p-0 text-center">
                                    <img class="card-img-top" src="<%= campground.image %>">
                                    <div class="card-body pb-2">
                                        <div class="d-flex justify-content-center">
                                            <span title="<%= Math.round(campground.avg_rating*2)/2 %>">
                                                <div>
                                                    <% if(!campground.avg_rating){%>
                                                        <p class="card-subtitle text-muted text-left mb-2"><em>No reviews yet</em></p>
                                                    <% } else {%>
                                                        <p class="card-title">
                                                            <% let rating = Math.round(campground.avg_rating*2)/2 %>
                                                            <% let stars = 0 %>
                                                            <% while((rating - stars) > 0.5) {%>
                                                                <i class="fas fa-star"></i>
                                                                    <% stars++ %>
                                                            <% } %>
                                                            <% if((rating - stars) === 0.5) {%>
                                                                <i class="fas fa-star-half-alt"></i>
                                                                <% stars++ %>
                                                            <% } %>
                                                            <% while(stars < 5) {%>
                                                                <i class="far fa-star"></i>
                                                                    <% stars++ %>
                                                            <% } %>
                                                        </p>
                                                    <% } %>
                                                </div>
                                            </span>
                                        </div>
                                        <h5 class="card-title"><%= campground.name %></h5>
                                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary mb-2">More Info</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
