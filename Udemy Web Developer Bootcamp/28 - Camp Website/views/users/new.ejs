<%- include("../partials/header") %>

<div class="container">
    <h1 class="display-4 m-5 text-center">Sign Up</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4">
                <form action="/users" method="post">
                    <div class="form-group">
                        <input type="text" name="username" placeholder="Username" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="admin_code" placeholder="Admin Code" class="form-control form-control-sm">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>
                <a class="btn btn-secondary btn-block mt-3" href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>
