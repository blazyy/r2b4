<%- include("../partials/header") %>

<div class="container">
    <h1 class="display-4 m-5 text-center">Edit <%= campground.name %></h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <form action="/campgrounds/<%= campground._id %>?_method=put" method="post" required>
                    <div class="form-group">
                        <input type="text" name="camp[name]" class="form-control" value="<%= campground.name %>" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="camp[image]" class="form-control" value="<%= campground.image %>" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="camp[description]" class="form-control" value="<%= campground.description %>" required>
                    </div>
                    <div class="form-group">
                        <input type="number" name="camp[price]" step=".01" class="form-control" value="<%= campground.price %>" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="camp[location]" class="form-control" value="<%= campground.location %>" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>
                <a class="btn btn-secondary btn-block mt-3" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
