<%- include("../partials/header") %>

<script src="https://kit.fontawesome.com/90c1f722b6.js" crossorigin="anonymous"></script>

<header class="jumbotron p-5">
    <div class="container">
        <h1 class="display-4">Welcome To CampSite‚Ñ¢ üèï</h1>
        <p class="lead">View our campgrounds from all over the world.</p>
        <a class="btn btn-primary mt-0" href="/campgrounds/new">Add New Campground</a>
    </div>
</header>

<div class="container">
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="card p-0 text-center">
                <img class="card-img-top" src="<%= campground.image %>">
                <div class="card-body pb-2">
                    <div class="d-flex justify-content-center">
                        <span title="<%= Math.round(campground.avg_rating*2)/2 %>">
                            <div>
                                <% if(!campground.avg_rating){%>
                                    <p class="card-subtitle text-muted text-left mb-2"><em>No reviews yet</em></p>
                                <% } else {%>
                                    <p class="card-title">
                                        <% let rating = Math.round(campground.avg_rating*2)/2 %>
                                        <% let stars = 0 %>
                                        <% while((rating - stars) > 0.5) {%>
                                            <i class="fas fa-star"></i>
                                                <% stars++ %>
                                        <% } %>
                                        <% if((rating - stars) === 0.5) {%>
                                            <i class="fas fa-star-half-alt"></i>
                                            <% stars++ %>
                                        <% } %>
                                        <% while(stars < 5) {%>
                                            <i class="far fa-star"></i>
                                                <% stars++ %>
                                        <% } %>
                                    </p>
                                <% } %>
                            </div>
                        </span>
                    </div>
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary mb-2">More Info</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>

</div>

<%- include("../partials/footer") %>
