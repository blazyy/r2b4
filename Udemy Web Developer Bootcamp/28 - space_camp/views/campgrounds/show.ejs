<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">SpaceCamp ðŸš€</p>
            <div class="list-group">
                <li class="list-group-item active">info1</li>
                <li class="list-group-item">info2</li>
                <li class="list-group-item">info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card mb-3 p-0">
                <img src="<%= campground.image %>" class="card-img-top">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title"><a href="#"><%= campground.name %></a></h5>
                        <p class="card-text text-right">$9.00/night</p>
                    </div>
                    <p class="card-text"><%= campground.description %></p>
                    <h6 class="card-subtitle mb-2 text-muted"><em>Added By <%= campground.author.username %></em></h6>
                </div>
            </div>
                <div class="card bg-light p-3">
                    <div class="text-right">
                        <a href="<%= campground._id %>/comments/new" class="btn btn-info">Add Comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12 card-body">
                                <div class="d-flex justify-content-between">
                                    <p><strong><%= comment.author.username %></strong></p>
                                    <p class="text-right"><em>10 days ago</em></p>
                                </div>
                                <p><%= comment.text %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
        </div>
    </div>
</div>



<%- include("../partials/footer") %>
